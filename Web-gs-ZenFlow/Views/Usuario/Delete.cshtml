@model Web_gs_ZenFlow.Application.DTOs.Usuario.UsuarioResponseDto

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h1>Excluir Usuário</h1>

<h3>Tem certeza que deseja excluir este usuário?</h3>
<div>
    <dl>
        <dt>Id</dt>
        <dd>@Model.Id</dd>
        
        <dt>Nome Completo</dt>
        <dd>@Model.NomeCompleto</dd>
        
        <dt>Email</dt>
        <dd>@Model.Email</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" />
        <a asp-action="Index">Cancelar</a>
    </form>
</div>

