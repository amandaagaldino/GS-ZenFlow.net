@model Web_gs_ZenFlow.Application.DTOs.Usuario.UsuarioResponseDto

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="page-header">
    <h1><i class="fas fa-exclamation-triangle me-2"></i>Excluir Usuário</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-trash me-2"></i>Confirmação de Exclusão</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Atenção!</strong> Tem certeza que deseja excluir este usuário?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4"><strong>ID:</strong></dt>
                    <dd class="col-sm-8">#@Model.Id</dd>
                    
                    <dt class="col-sm-4"><strong>Nome:</strong></dt>
                    <dd class="col-sm-8">@Model.NomeCompleto</dd>
                    
                    <dt class="col-sm-4"><strong>Email:</strong></dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                </dl>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Confirmar Exclusão
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
