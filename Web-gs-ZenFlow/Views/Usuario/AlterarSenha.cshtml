@model Web_gs_ZenFlow.Application.DTOs.Usuario.AlterarSenhaDto

@{
    ViewData["Title"] = "Alterar Senha";
}

<h1>Alterar Senha</h1>

<form asp-action="AlterarSenha" asp-route-id="@ViewBag.UsuarioId">
    <div asp-validation-summary="ModelOnly"></div>
    
    <div>
        <label asp-for="SenhaAtual"></label>
        <input asp-for="SenhaAtual" type="password" />
        <span asp-validation-for="SenhaAtual"></span>
    </div>
    
    <div>
        <label asp-for="NovaSenha"></label>
        <input asp-for="NovaSenha" type="password" />
        <span asp-validation-for="NovaSenha"></span>
    </div>
    
    <div>
        <input type="submit" value="Alterar" />
        <a asp-action="Details" asp-route-id="@ViewBag.UsuarioId">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

