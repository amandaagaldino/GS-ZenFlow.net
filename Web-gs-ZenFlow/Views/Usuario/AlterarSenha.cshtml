@model Web_gs_ZenFlow.Application.DTOs.Usuario.AlterarSenhaDto

@{
    ViewData["Title"] = "Alterar Senha";
}

<div class="page-header">
    <h1><i class="fas fa-key me-2"></i>Alterar Senha</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-lock me-2"></i>Nova Senha</h5>
            </div>
            <div class="card-body">
                <form asp-action="AlterarSenha" asp-route-id="@ViewBag.UsuarioId">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="SenhaAtual" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="SenhaAtual" type="password" class="form-control" placeholder="Digite sua senha atual" />
                        </div>
                        <span asp-validation-for="SenhaAtual" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="NovaSenha" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            <input asp-for="NovaSenha" type="password" class="form-control" placeholder="Digite a nova senha (mÃ­nimo 6 caracteres)" />
                        </div>
                        <span asp-validation-for="NovaSenha" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@ViewBag.UsuarioId" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-secondary">
                            <i class="fas fa-save me-2"></i>Alterar Senha
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
