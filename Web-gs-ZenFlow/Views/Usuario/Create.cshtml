@model Web_gs_ZenFlow.Application.DTOs.Usuario.CreateUsuarioDto

@{
    ViewData["Title"] = "Criar Usuário";
}

<div class="page-header">
    <h1><i class="fas fa-user-plus me-2"></i>Criar Novo Usuário</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i>Informações do Usuário</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="NomeCompleto" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="NomeCompleto" class="form-control" placeholder="Digite o nome completo" />
                            </div>
                            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" type="email" class="form-control" placeholder="email@exemplo.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Senha" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Senha" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                            </div>
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DataNascimento" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                <input asp-for="DataNascimento" type="date" class="form-control" />
                            </div>
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Cpf" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <input asp-for="Cpf" class="form-control" placeholder="00000000000" maxlength="11" />
                            </div>
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsGestor" class="form-check-input" type="checkbox" id="isGestorSwitch">
                            <label class="form-check-label" for="isGestorSwitch">
                                <i class="fas fa-crown me-2 text-warning"></i>Usuário é Gestor
                            </label>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Criar Usuário
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
