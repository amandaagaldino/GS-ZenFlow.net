@model Web_gs_ZenFlow.Application.DTOs.Usuario.UsuarioResponseDto

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<h1>Detalhes do Usuário</h1>

<div>
    <dl>
        <dt>Id</dt>
        <dd>@Model.Id</dd>
        
        <dt>Nome Completo</dt>
        <dd>@Model.NomeCompleto</dd>
        
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        
        <dt>CPF</dt>
        <dd>@Model.Cpf</dd>
        
        <dt>Data de Nascimento</dt>
        <dd>@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>
        
        <dt>É Gestor</dt>
        <dd>@(Model.IsGestor ? "Sim" : "Não")</dd>
        
        <dt>Ativo</dt>
        <dd>@(Model.Ativo ? "Sim" : "Não")</dd>
        
        <dt>Data de Criação</dt>
        <dd>@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
        
        @if (Model.DataAtualizacao.HasValue)
        {
            <dt>Data de Atualização</dt>
            <dd>@Model.DataAtualizacao.Value.ToString("dd/MM/yyyy HH:mm")</dd>
        }
    </dl>
</div>

<div>
    <a asp-action="AlterarEmail" asp-route-id="@Model.Id">Alterar Email</a> |
    <a asp-action="AlterarSenha" asp-route-id="@Model.Id">Alterar Senha</a> |
    <a asp-action="Index">Voltar para Lista</a>
</div>

<div>
    <h3>Registros do Usuário</h3>
    <a asp-controller="Registro" asp-action="ByUsuario" asp-route-usuarioId="@Model.Id">Ver Registros</a> |
    <a asp-controller="Registro" asp-action="Create" asp-route-usuarioId="@Model.Id">Criar Novo Registro</a>
</div>

