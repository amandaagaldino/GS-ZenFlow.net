@model Web_gs_ZenFlow.Application.DTOs.Usuario.UsuarioResponseDto

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="page-header">
    <h1><i class="fas fa-user me-2"></i>Detalhes do Usuário</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informações Pessoais</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4"><i class="fas fa-hashtag me-2 text-primary"></i>ID:</dt>
                    <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>

                    <dt class="col-sm-4"><i class="fas fa-user me-2 text-primary"></i>Nome Completo:</dt>
                    <dd class="col-sm-8">@Model.NomeCompleto</dd>

                    <dt class="col-sm-4"><i class="fas fa-envelope me-2 text-primary"></i>Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4"><i class="fas fa-id-card me-2 text-primary"></i>CPF:</dt>
                    <dd class="col-sm-8">@Model.Cpf</dd>

                    <dt class="col-sm-4"><i class="fas fa-birthday-cake me-2 text-primary"></i>Data de Nascimento:</dt>
                    <dd class="col-sm-8">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4"><i class="fas fa-crown me-2 text-primary"></i>É Gestor:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsGestor)
                        {
                            <span class="badge bg-warning">
                                <i class="fas fa-crown me-1"></i>Sim
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Não</span>
                        }
                    </dd>

                    <dt class="col-sm-4"><i class="fas fa-check-circle me-2 text-primary"></i>Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>Ativo
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-times-circle me-1"></i>Inativo
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-4"><i class="fas fa-calendar-plus me-2 text-primary"></i>Data de Criação:</dt>
                    <dd class="col-sm-8">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>

                    @if (Model.DataAtualizacao.HasValue)
                    {
                        <dt class="col-sm-4"><i class="fas fa-calendar-edit me-2 text-primary"></i>Última Atualização:</dt>
                        <dd class="col-sm-8">@Model.DataAtualizacao.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Ações</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="AlterarEmail" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-envelope me-2"></i>Alterar Email
                    </a>
                    <a asp-action="AlterarSenha" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-key me-2"></i>Alterar Senha
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Excluir Usuário
                    </a>
                    <hr>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Voltar para Lista
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Registros</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Registro" asp-action="ByUsuario" asp-route-usuarioId="@Model.Id" class="btn btn-info">
                        <i class="fas fa-list me-2"></i>Ver Registros
                    </a>
                    <a asp-controller="Registro" asp-action="Create" asp-route-usuarioId="@Model.Id" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Criar Novo Registro
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
