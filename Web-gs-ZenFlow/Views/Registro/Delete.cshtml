@model Web_gs_ZenFlow.Application.DTOs.Registro.RegistroResponseDto

@{
    ViewData["Title"] = "Excluir Registro";
    var stressColor = Model.NivelEstresse switch
    {
        1 => "success",
        2 => "info",
        3 => "warning",
        4 => "warning",
        5 => "danger",
        _ => "secondary"
    };
}

<div class="page-header" style="background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 100%);">
    <h1><i class="fas fa-exclamation-triangle me-2"></i>Excluir Registro</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-trash me-2"></i>Confirmação de Exclusão</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Atenção!</strong> Tem certeza que deseja excluir este registro?
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4"><strong>ID:</strong></dt>
                    <dd class="col-sm-8">#@Model.Id</dd>
                    
                    <dt class="col-sm-4"><strong>Usuário:</strong></dt>
                    <dd class="col-sm-8">@Model.UsuarioNome</dd>
                    
                    <dt class="col-sm-4"><strong>Nível de Estresse:</strong></dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@stressColor">
                            <i class="fas fa-thermometer-half me-1"></i>
                            Nível @Model.NivelEstresse
                        </span>
                    </dd>
                    
                    <dt class="col-sm-4"><strong>Data:</strong></dt>
                    <dd class="col-sm-8">@Model.Data.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>
                
                <form asp-action="Delete" asp-route-usuarioId="@ViewBag.UsuarioId">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="usuarioId" value="@ViewBag.UsuarioId" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Confirmar Exclusão
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
